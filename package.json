{
  "name": "fitness-tracker",
  "description": "Fitness tracker app",
  "version": "0.5.6",
  "author": "Alexandr Dergunov <dergunovs@mail.ru> (https://github.com/dergunovs)",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dergunovs/fit.git"
  },
  "scripts": {
    "lint": "turbo run lint",
    "ts": "turbo run ts",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:apk": "npm run tauri icon src-tauri/app-icon.png && npx tauri android build --apk true --target aarch64",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "pub": "turbo run build --filter=fitness-tracker-frontend && changeset version && changeset publish",
    "tauri": "tauri"
  },
  "dependencies": {
    "@changesets/cli": "2.29.8"
  },
  "devDependencies": {
    "@turbo/gen": "2.6.3",
    "prettier": "3.7.4",
    "turbo": "2.6.3"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "npm": ">=11.6.2",
    "node": ">=25.2.1"
  },
  "homepage": "https://app-fit.ru"
}
