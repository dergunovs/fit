{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FiT",
  "version": "0.5.2",
  "identifier": "com.appfit.dev",
  "build": {
    "frontendDist": "../apps/frontend/dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "VITE_API=https://app-fit.ru/api npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FiT",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Visible"
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 30
    }
  }
}
